<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Dialog
    id="laptopDialog"
    title="Select Laptop Battery Model"
    stretchOnPhone="true"
    draggable="true"
    resizable="true"
    contentWidth="500px"
    contentHeight="400px"
    class="sapUiResponsivePadding--header sapUiResponsivePadding--content">

    <VBox>
      <SearchField
        id="laptopSearch"
        width="100%"
        placeholder="Search laptop model"
        liveChange=".onLaptopSearch" />

      <Table
        id="laptopTable"
        growing="true"
        growingScrollToLoad="true"
        mode="SingleSelectMaster"
        inset="false">
        <columns>
          <Column>
            <Text text="Brand" />
          </Column>
          <Column>
            <Text text="Laptop Model" />
          </Column>
        </columns>
      </Table>
    </VBox>

    <beginButton>
      <Button text="OK" press=".onLaptopConfirm" />
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onLaptopCancel" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>
