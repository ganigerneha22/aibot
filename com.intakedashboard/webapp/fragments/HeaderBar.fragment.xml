<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Bar class="customHeaderBar">
        <contentLeft>
            <Image src="./resources/sap/ui/documentation/sdk/images/logo_sap.png" width="3rem" class="sapMBarChild" press="onHomeIconPress"/>
            <Label text="Home" class="headerTitle"/>
        </contentLeft>
        <contentRight>
            <Button icon="sap-icon://search" type="Transparent" tooltip="Search" press="onSearchPress" class="blackIconButton"/>
            <Button icon="sap-icon://da" type="Transparent" press=".onChatBotClick" tooltip="Joule" class="blackIconButton"/>
            <Button icon="sap-icon://bell" type="Transparent" class="blackIconButton"></Button>
            <Avatar initials="UI" displaySize="XS" press="onAvatarPress" class="headerAvatar" src="Images/avatar.png"/>
            <Text text="Justin Donin"/>
        </contentRight>
    </Bar>
</core:FragmentDefinition>